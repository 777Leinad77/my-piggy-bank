<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".projet.ProjetModif">

    <EditText
        android:id="@+id/ETModifiNom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Nom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Projet : "
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="@+id/ETModifiNom"
        app:layout_constraintEnd_toStartOf="@+id/ETModifiNom"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/BProjSupp"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_marginTop="69dp"
        android:background="@drawable/nobutton"
        android:text="Supprimer"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/BModifiRetour"
        app:layout_constraintHorizontal_bias="0.27"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ETModifiNom"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/BModifiRetour"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_marginStart="47dp"
        android:background="@drawable/yesbutton"
        android:text="enregistrer"
        app:layout_constraintBottom_toBottomOf="@+id/BProjSupp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/BProjSupp"
        app:layout_constraintTop_toTopOf="@+id/BProjSupp"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>